# =============================================================================
# Restaurant OS - Client Environment Variables
# =============================================================================
# Copy this file to .env.local for local development
# DO NOT commit .env.local to git (it's in .gitignore)
#
# Last Updated: 2025-11-05
# =============================================================================

# -----------------------------------------------------------------------------
# API Configuration
# -----------------------------------------------------------------------------
VITE_API_BASE_URL=http://localhost:5000
VITE_SUPABASE_URL=your_supabase_url_here
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# -----------------------------------------------------------------------------
# OpenAI Realtime API (Voice Ordering)
# -----------------------------------------------------------------------------
VITE_OPENAI_REALTIME_MODEL=gpt-4o-realtime-preview-2025-06-03

# -----------------------------------------------------------------------------
# Feature Flags - Phase 1: Crisis Response & Baseline
# -----------------------------------------------------------------------------
# Format: VITE_FEATURE_<FLAG_NAME>=<true|false|percentage>
#
# Examples:
#   VITE_FEATURE_MY_FEATURE=true          # Enable for all
#   VITE_FEATURE_MY_FEATURE=false         # Disable for all
#   VITE_FEATURE_MY_FEATURE=50            # Enable for 50% (gradual rollout)

# Use dynamic restaurant ID from auth context (fixes data corruption)
# Status: Implemented (8015b03d)
# Rollout: 0% → 10% → 25% → 50% → 100% over 7 days
VITE_FEATURE_NEW_CUSTOMER_ID_FLOW=false

# Server-side idempotency key checking (Phase 2A)
VITE_FEATURE_IDEMPOTENCY_ENABLED=false

# -----------------------------------------------------------------------------
# Feature Flags - Phase 2A: Backend Reliability
# -----------------------------------------------------------------------------

# Enable TURN servers for NAT traversal (15% of users need)
VITE_FEATURE_TURN_SERVERS_ENABLED=false

# Save order state to sessionStorage on disconnect
VITE_FEATURE_STATE_PRESERVATION_ENABLED=false

# -----------------------------------------------------------------------------
# Feature Flags - Phase 2B: Voice UX Improvements
# -----------------------------------------------------------------------------

# Use 0.75 confidence threshold (vs 0.5) for order items
# A/B test target: 95%+ confidence on accepted orders
VITE_FEATURE_HIGH_CONFIDENCE_THRESHOLD=false

# Show item confidence scores before adding to cart
VITE_FEATURE_ITEM_CONFIRMATION_UI=false

# Suggest similar items when no exact match found
VITE_FEATURE_UNMATCHED_ITEM_SUGGESTIONS=false

# -----------------------------------------------------------------------------
# Feature Flags - Phase 3: Connection Reliability
# -----------------------------------------------------------------------------

# Gradually reduce timeout from 60s → 10s over 7 days
VITE_FEATURE_GRADUATED_TIMEOUT=false

# Smart retry with exponential backoff
VITE_FEATURE_EXPONENTIAL_BACKOFF_RETRY=false

# Rate limiting with retry awareness
VITE_FEATURE_RATE_LIMITING_WITH_RETRY=false

# -----------------------------------------------------------------------------
# Feature Flags - Phase 4: UX Polish
# -----------------------------------------------------------------------------

# Show audio waveform during voice recording
VITE_FEATURE_AUDIO_VISUALIZATION=false

# Review modal before submitting order (shows total, items)
VITE_FEATURE_PRE_SUBMISSION_REVIEW=false

# Conversational error messages (friendly UX)
VITE_FEATURE_CONVERSATIONAL_ERROR_MESSAGES=false

# Optimistic UI updates (update UI before server confirms)
VITE_FEATURE_OPTIMISTIC_UI_UPDATES=false

# -----------------------------------------------------------------------------
# Monitoring & Analytics
# -----------------------------------------------------------------------------
VITE_SENTRY_DSN=
VITE_ANALYTICS_ENABLED=false

# -----------------------------------------------------------------------------
# Development/Debug Settings
# -----------------------------------------------------------------------------
VITE_DEBUG_MODE=false
VITE_ENABLE_REDUX_DEVTOOLS=false
