# Local Development Environment
# Copy this file to .env and fill in your values

# --- Backend (server) ---
NODE_ENV=development
PORT=3001
DATABASE_URL=postgresql://user:password@localhost:5432/dbname
DEFAULT_RESTAURANT_ID=11111111-1111-1111-1111-111111111111

# Supabase Configuration - Get from https://app.supabase.com/project/YOUR_PROJECT
SUPABASE_URL=https://YOUR_PROJECT_REF.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_KEY=your_supabase_service_role_key_here

# OpenAI API Configuration (Required for AI features)
OPENAI_API_KEY=your_openai_api_key_here

# Optional emergency fallback (leave unset in production)
# AI_DEGRADED_MODE=true

# --- Frontend (client) - Only VITE_ prefixed vars ---
VITE_API_BASE_URL=http://localhost:3001
VITE_DEFAULT_RESTAURANT_ID=11111111-1111-1111-1111-111111111111
VITE_USE_MOCK_DATA=false
VITE_USE_REALTIME_VOICE=false
VITE_SUPABASE_URL=https://YOUR_PROJECT_REF.supabase.co
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Square Payment Configuration (Optional)
VITE_SQUARE_APP_ID=your_square_app_id
VITE_SQUARE_LOCATION_ID=your_square_location_id

# Performance Monitoring (Optional)
VITE_ENABLE_PERF=false