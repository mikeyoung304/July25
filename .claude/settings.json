{
  "extends": "~/.claude/settings.json",
  "project": {
    "name": "rebuild-6.0",
    "description": "Restaurant OS - Point of Sale + Management System",
    "stack": ["react", "typescript", "vite", "express", "supabase"],
    "port": 3001
  },
  "commands": {
    "dev": "npm run dev",
    "test": "npm test",
    "lint": "npm run lint:fix",
    "typecheck": "npm run typecheck",
    "build": "npm run build"
  },
  "preferredAgents": ["vite-builder", "react-optimizer"],
  "projectSpecific": {
    "multiTenancy": {
      "contextProvider": "RestaurantContext",
      "idField": "restaurant_id"
    },
    "quality": {
      "coverage": 60,
      "preCommit": ["test", "lint", "typecheck"]
    },
    "voiceSystem": {
      "implementation": "WebRTC + OpenAI Realtime",
      "component": "VoiceControlWebRTC",
      "apiEndpoint": "/api/v1/realtime/session"
    }
  }
}