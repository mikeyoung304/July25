{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@rebuild/shared/*": ["shared/*"],
      "@/*": ["client/src/*"]
    },
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020"],
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true
  }
}