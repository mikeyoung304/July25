+      setMessageLog(prev => [
+        {
+          id: message.id,
+          type: message.type,
+          timestamp: new Date(message.timestamp),
+          size: JSON.stringify(payload).length
+        },
+        ...prev.slice(0, 99) // Keep last 100 messages
+      ])
+    })
+
+    return unsubscribe
+  }, [subscribe])
