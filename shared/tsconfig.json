{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "noEmit": false,
    "outDir": "dist",
    "declaration": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "target": "ES2020",
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "tsBuildInfoFile": "./dist/.tsbuildinfo",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": ["./**/*.ts", "./**/*.tsx"],
  "exclude": ["dist", "node_modules", "**/__tests__/**", "config/browser.ts"]
}
