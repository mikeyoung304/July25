# Server Configuration
PORT=3001
NODE_ENV=development

# Database Configuration (Cloud Supabase)
# TODO: Get this from Supabase Dashboard > Settings > Database > Connection string
# It should look like: postgresql://postgres.[project-ref]:[password]@aws-0-us-east-1.pooler.supabase.com:5432/postgres
DATABASE_URL=REPLACE_WITH_SUPABASE_CLOUD_URL

# Supabase Configuration (copy from root .env)
SUPABASE_URL=https://[project-ref].supabase.co
SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_SERVICE_KEY=your_service_key_here

# JWT Configuration
SUPABASE_JWT_SECRET=your-jwt-secret

# Restaurant Configuration (for development)
DEFAULT_RESTAURANT_ID=11111111-1111-1111-1111-111111111111

# CORS Configuration
FRONTEND_URL=http://localhost:5173

# OpenAI Configuration (AI is integrated into unified backend)
OPENAI_API_KEY=your-openai-api-key

# Logging Configuration
LOG_LEVEL=debug
LOG_FORMAT=json

# Cache Configuration
CACHE_TTL_SECONDS=300

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100