{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDirs": ["./src", "../shared"]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/**/*.spec.ts",
    "src/**/*.spec.tsx",
    "src/**/__tests__/**/*",
    "src/**/__mocks__/**/*",
    "src/test-utils/**/*",
    "tests/**/*",
    "scripts/**/*",
    "../shared/config/browser.ts",
    "../shared/utils/browser-only.ts",
    "../shared/utils/error-handling.ts",
    "../shared/utils/websocket-pool.browser.ts",
    "../shared/utils/react-performance.ts",
    "../shared/utils/performance-hooks.ts",
    "../shared/utils/cleanup-manager.ts",
    "../shared/utils/memory-monitoring.ts",
    "../shared/monitoring/error-tracker.ts",
    "../shared/monitoring/performance-monitor.ts",
    "../shared/monitoring/web-vitals.ts",
    "../shared/config/index.ts"
  ]
}
