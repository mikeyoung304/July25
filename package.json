{
  "name": "restaurant-os",
  "private": true,
  "version": "6.0.14",
  "type": "module",
  "description": "Restaurant OS - Intelligent Restaurant Management System",
  "workspaces": [
    "client",
    "server",
    "shared"
  ],
  "scripts": {
    "deploy": "./scripts/vercel-deploy.sh",
    "check:vercel": "node tools/verify-vercel-project.mjs",
    "env:check": "node scripts/check-env.mjs",
    "env:validate": "node scripts/validate-env.mjs",
    "verify:env": "./scripts/verify-env-health.sh",
    "verify:vercel": "./scripts/verify-vercel-env.sh",
    "verify:render": "./scripts/verify-render-api.sh",
    "verify:all": "./scripts/verify-all.sh",
    "docs:validate": "./scripts/pre-commit-docs-check.sh",
    "docs:cleanup": "./scripts/cleanup-root-documentation.sh",
    "docs:cleanup:dry-run": "./scripts/cleanup-root-documentation.sh --dry-run",
    "validate:square": "./scripts/validate-square-credentials.sh",
    "validate:workflows": "actionlint .github/workflows/*.yml || exit 0",
    "vercel:check": "node tools/verify-vercel-project.mjs",
    "vercel:link": "vercel link --project july25-client --yes",
    "start": "cd server && npm start",
    "dev": "NODE_OPTIONS='--max-old-space-size=3072' concurrently --kill-others-on-fail \"npm run dev:server\" \"npm run dev:client\"",
    "dev:supabase": "./scripts/dev-with-supabase.sh",
    "dev:streaming": "ENABLE_REALTIME_STREAMING=true npm run dev",
    "dev:server": "cd server && npm run dev",
    "dev:client": "cd client && npm run dev",
    "install:all": "npm install && cd server && npm install && cd ../client && npm install",
    "build": "NODE_OPTIONS='--max-old-space-size=3072' npm run build:render",
    "build:full": "npm run build:client && npm run build:server",
    "build:render": "cd server && npm run build",
    "build:client": "NODE_OPTIONS='--max-old-space-size=3072' cd client && npm run build",
    "build:server": "NODE_OPTIONS='--max-old-space-size=3072' cd server && npm run build",
    "build:vercel": "npm run build --workspace=@rebuild/shared --if-present && cd client && ROLLUP_NO_NATIVE=1 npm run build",
    "test": "NODE_OPTIONS='--max-old-space-size=3072 --expose-gc' npm run test:client && npm run test:server",
    "test:client": "NODE_OPTIONS='--max-old-space-size=3072 --expose-gc' cd client && npm test",
    "test:server": "NODE_OPTIONS='--max-old-space-size=3072 --expose-gc' cd server && npm test",
    "test:ci": "NODE_OPTIONS='--max-old-space-size=3072 --expose-gc' VITEST_COVERAGE=false npm run test:client && npm run test:server",
    "test:watch": "NODE_OPTIONS='--max-old-space-size=3072 --expose-gc' cd client && npm run test:watch",
    "test:debug": "NODE_OPTIONS='--max-old-space-size=3072 --expose-gc --inspect' cd client && npm test",
    "test:coverage": "NODE_OPTIONS='--max-old-space-size=3072' cd client && npm run test:coverage",
    "test:e2e": "npx playwright test --project=chromium",
    "test:affected": "nx affected:test",
    "test:quick": "vitest --run --reporter=dot --passWithNoTests --no-color",
    "test:healthy": "node scripts/test-quarantine.js --run-healthy",
    "test:quarantine:status": "node scripts/test-quarantine.js --status",
    "test:quarantine:dashboard": "node scripts/test-quarantine.js --dashboard",
    "health": "node scripts/system-health.js",
    "health:fix": "node scripts/health-fix-all.js",
    "health:fix:config": "node scripts/fix-config-drift.js",
    "health:fix:schema": "node scripts/fix-schema-drift.js",
    "health:fix:api": "node scripts/fix-api-drift.js",
    "clean": "rm -rf node_modules/.vite client/dist server/dist",
    "check:integration": "tsx scripts/integration-check.ts",
    "lint": "eslint shared/config client/src/config server/src/config/environment.ts",
    "lint:fix": "eslint shared/config client/src/config server/src/config/environment.ts --fix",
    "lint:freeze": "node scripts/eslint-freeze.cjs",
    "check:no-shared-js": "node tools/check-no-shared-js.js",
    "typecheck": "tsc -b tsconfig.all.json --pretty false",
    "typecheck:staged": "tsc --noEmit",
    "typecheck:freeze": "node tools/check-ts-freeze.mjs",
    "typecheck:baseline": "npm run typecheck 2>&1 | grep 'error TS' | sed 's/^\\([^(]*\\)(\\([0-9]*\\),\\([0-9]*\\)): error \\(TS[0-9]*\\): .*/\\{\"file\":\"\\1\",\"line\":\\2,\"column\":\\3,\"code\":\"\\4\"\\}/' | jq -s '.' > tools/ts-error-allowlist.json",
    "typecheck:update-allowlist": "npm run typecheck:baseline",
    "typecheck:strict": "tsc --build tsconfig.all.json --noEmit",
    "ts:freeze": "node scripts/ts-freeze.cjs",
    "verify:ports": "! grep -r --include='*.ts' --include='*.tsx' --include='*.js' --include='*.jsx' --include='*.md' --exclude-dir=node_modules --exclude-dir=dist --exclude-dir=build '3002\\|AI_GATEWAY' client/ server/ || (echo 'Error: Found forbidden port 3002 or AI_GATEWAY references!' && exit 1)",
    "diagram:render": "node scripts/diagram-ci.js",
    "db:push": "supabase db push",
    "db:reset": "supabase db reset",
    "db:migration:new": "supabase migration new",
    "db:status": "cd server && npm run db:check",
    "analyze": "tsx scripts/gen-code-analysis.ts",
    "analyze:bundle": "tsx scripts/analyze-bundle.ts",
    "docs:generate": "tsx scripts/generate-docs.ts",
    "docs:check": "node scripts/docs-check.js",
    "docs:drift": "node scripts/check-schema-drift.cjs && node scripts/check-api-drift.cjs && node scripts/check-config-drift.cjs",
    "docs:drift:schema": "node scripts/check-schema-drift.cjs",
    "docs:drift:api": "node scripts/check-api-drift.cjs",
    "docs:drift:config": "node scripts/check-config-drift.cjs",
    "docs:api:scan": "node scripts/scan-api-routes.ts",
    "docs:api:validate": "node scripts/validate-openapi.ts",
    "docs:api:check": "npm run docs:api:scan && npm run docs:api:validate",
    "dev:setup": "./scripts/dev-setup.sh",
    "db:seed": "tsx scripts/seed-database.ts",
    "test:enhanced": "npx playwright test",
    "test:visual": "npx playwright test --project=visual-regression",
    "test:a11y": "npx playwright test --project=accessibility",
    "test:api": "npx playwright test --project=api",
    "test:performance": "npx playwright test --project=performance",
    "test:e2e:smoke": "./scripts/run-smoke-tests.sh",
    "voice:smoke": "curl -s http://localhost:3001/api/v1/ai/voice/handshake | jq .",
    "memory:check": "ps aux | grep -E 'node|vite' | awk '{sum+=$6} END {printf \"Memory: %.0f MB\\n\", sum/1024}'",
    "clean:all": "rm -rf node_modules client/node_modules server/node_modules",
    "reset": "pkill -f vite 2>/dev/null || true; npm run clean",
    "prepare": "command -v husky >/dev/null 2>&1 && husky install || true",
    "typecheck:quick": "tsc --noEmit -p tsconfig.all.json"
  },
  "overrides": {
    "react": "18.3.1",
    "react-dom": "18.3.1"
  },
  "devDependencies": {
    "vite": "5.4.19",
    "@vitejs/plugin-react": "^4.5.2",
    "@apidevtools/swagger-parser": "^12.1.0",
    "@axe-core/playwright": "^4.10.2",
    "@babel/preset-env": "^7.28.0",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@cyanheads/git-mcp-server": "^2.3.2",
    "@eslint/js": "^9.31.0",
    "@modelcontextprotocol/server-filesystem": "^2025.8.21",
    "@modelcontextprotocol/server-memory": "^2025.8.4",
    "@modelcontextprotocol/server-puppeteer": "^2025.5.12",
    "@modelcontextprotocol/server-sequential-thinking": "^2025.7.1",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/instrumentation-express": "^0.52.0",
    "@opentelemetry/instrumentation-http": "^0.203.0",
    "@opentelemetry/sdk-node": "^0.203.0",
    "@playwright/experimental-ct-react": "^1.54.2",
    "@playwright/test": "^1.54.2",
    "@prisma/client": "^6.18.0",
    "@types/cookie-parser": "^1.4.9",
    "@types/csurf": "^1.11.5",
    "@types/node": "^20.19.10",
    "@types/validator": "^13.15.3",
    "@typescript-eslint/eslint-plugin": "^8.36.0",
    "@typescript-eslint/parser": "^8.36.0",
    "concurrently": "8.2.2",
    "cross-env": "^10.0.0",
    "dotenv": "^16.6.1",
    "eslint": "^9.31.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "glob": "^11.0.3",
    "husky": "^8.0.0",
    "lint-staged": "^16.1.5",
    "npm-run-all": "^4.1.5",
    "playwright-lighthouse": "^4.0.0",
    "prisma": "^6.18.0",
    "puppeteer": "^24.17.1",
    "sharp": "^0.34.3",
    "supabase-mcp": "^1.5.0",
    "terser": "^5.43.1",
    "tsx": "^4.7.0",
    "wait-on": "^8.0.4",
    "web-vitals": "^5.1.0"
  },
  "keywords": [
    "restaurant",
    "pos",
    "voice-ordering",
    "kds",
    "grow-fresh"
  ],
  "author": "Macon AI Solutions",
  "license": "PROPRIETARY",
  "engines": {
    "node": "20.x"
  },
  "packageManager": "npm@10.7.0",
  "dependencies": {
    "@radix-ui/react-tooltip": "^1.2.8",
    "js-yaml": "^4.1.0",
    "node-fetch": "^3.3.2",
    "typescript": "^5.3.3",
    "validator": "^13.15.15",
    "ws": "^8.18.3",
    "xss": "^1.0.15",
    "zod": "^3.25.76"
  }
}
